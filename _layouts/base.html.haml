!!!
%html
  %head
    %title
      Brooke and Sons
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/screen.css', :media=>'screen, projection' }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/print.css', :media=>'print' }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/site.css', :media=>'screen' }
    /[if lt IE 8]
      %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'/stylesheets/ie.css', :media=>'screen, projection' }
  %body.two-col
    #content_container
      #header
        %h1 Brooke and Sons Web Builders
        %a{:href=>site.base_url}
          Brookesonsweb.com
      #content_container
        #content
          ~ content
      #sidebar_container
        #sidebar
          %h2 Navigation
          %ul
            %li.post-tags
              %a{:href=>'/blog/tags/'}
                Tag cloud
          %h2 Contact
          %ul
            %li
              %a{:href=>'http://twitter.com/tmb52'}
                @tmb52 on Twitter
      #footer
        Copyright 2012 Brooke and Sons Web Builders.

      = google_analytics

