-#- for post in page.posts
  -#.post
    -#%h2
      -#%a{:href=>post.url}
        -#= post.title
    -#%h3
      -#= post.date.strftime( '%d %B %Y' )
    -#%h4
      -#- for tag in post.tags
        -#- unless tag.nil?
          -#%a{:href=>tag.primary_page.url}
            -#= tag
    -#.content
      -#~post.content
    -#.comments
      -#= post.intense_debate_comments_link

-#= page.posts.links
